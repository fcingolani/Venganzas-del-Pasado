= alert_message_for(user)

= form_for [:admin, user] do |f|
  %fieldset

    .clearfix
      = f.label :alias
      .input
        = f.text_field :alias
    .clearfix
      = f.label :email
      .input
        = f.text_field :email, :disabled => true
    .clearfix
      = f.label :karma
      .input
        = f.text_field :karma
    .clearfix
      = f.label :role
      .input
        = f.select :role, User.roles

    .actions
      = f.submit ( user.new_record? ? 'Crear' : 'Guardar' ), :class => 'btn primary'
      = link_to 'Cancelar', admin_users_path, :class => 'btn'
