%a{ :name => "comment#{comment.id}" }
.row.comment{ :class => "#{comment.status}"}
  .span1.avatar
    %img{ :src => gravatar_url_for(comment), :class => 'gravatar', :alt => comment.author }
  .span9.description
    %p.author
      = link_to comment.author, '#'
      %small
        hace
        = time_ago_in_words(comment.created_at)
        en
        = link_to comment.post.title, comment.post
        dijo:
    .content
      = markdown_format comment.content
    %p.meta
      - if comment.pending?
        %span.pending= link_to "Aprobar", approve_admin_comment_path(comment)
      %span.edit= link_to "Editar", edit_admin_comment_path(comment)
      %span.delete= link_to "Eliminar", admin_comment_path(comment), :confirm => '¿Estás seguro?', :method => :delete