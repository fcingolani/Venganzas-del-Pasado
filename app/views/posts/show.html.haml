- content_for :head do
  %title="#{@post.title} - Venganzas del Pasado"

.post-show
  =render @post

%a{ :name => "comments" }
%h4 Comentarios (#{@post.comments.approved.count}):

.comments

  - if @post.comments.approved.count > 0
    =render @post.comments
  - else
    %p
      No hay comentarios. ¡Podés ser el primero en comentar!
      
  = render 'comments/form', :post => @post, :comment => @post.comments.build
