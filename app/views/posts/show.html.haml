- if params[:page].nil?
  - page_title(@post.title)
- else
  - page_title(@post.title + " - Página #{params[:page]} de comentarios")

.row.post-nav
  - if prev_post = @post.previous
    .span4.prev-post= link_to "← #{prev_post.title}", prev_post
  - if next_post = @post.next
    .span4.offset1.next-post= link_to "#{next_post.title} →", next_post

=render @post, :comments => @comments
