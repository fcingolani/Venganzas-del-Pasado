  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %fieldset
      .inputs
        .clearfix
          = f.label :email
          = f.text_field :email
        .clearfix
          = f.label :alias
          = f.text_field :alias
