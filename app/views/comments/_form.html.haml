= form_for [@post, @comment] do |f|
  %p
    = f.label :post_id
    %br
    = f.number_field :post_id
  %p
    = f.label :author
    %br
    = f.text_field :author
  %p
    = f.label :author_email
    %br
    = f.text_field :author_email
  %p
    = f.label :author_url
    %br
    = f.text_field :author_url
  %p
    = f.label :author_ip
    %br
    = f.text_field :author_ip
  %p
    = f.label :content
    %br
    = f.text_area :content, :class => 'xxlarge'
  %p
    = f.submit
