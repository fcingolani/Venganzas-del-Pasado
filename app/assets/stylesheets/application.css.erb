body {
  padding-top: 40px;
}

#header .logo {
  background-image: url(<%= asset_path 'logo.png' %>);
  border: 1px solid #ddd;
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.075);
     -moz-box-shadow: 0 1px 2px rgba(0,0,0,.075);
          box-shadow: 0 1px 2px rgba(0,0,0,.075);
  display: inline;
  float: left;
  margin-left: 20px;
  height: 90px;
  margin: 5px 5px 5px 20px;
  width: 203px;
  position: relative;
}

.logo h3 {
  position: absolute;
  bottom: 0px;
  right: 5px;
  color: white;
}

#header .banner {
  display: inline;
  float: left;
  margin-left: 20px;
  width: 728px;
  height: 90px;
  margin: 6px 0 6px 0;
  background: #DEF;
}

.slogan {
  text-align: center;
  margin-bottom: 5px;
}

#menu {
  border: 1px solid #ddd;
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.075);
     -moz-box-shadow: 0 1px 2px rgba(0,0,0,.075);
          box-shadow: 0 1px 2px rgba(0,0,0,.075);
  background: #FEFBF3;
  width: 158px;
  min-height: 500px;
}

#content {
  min-height: 500px;
}

#sidebar {
  border: 1px solid #ddd;
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.075);
     -moz-box-shadow: 0 1px 2px rgba(0,0,0,.075);
          box-shadow: 0 1px 2px rgba(0,0,0,.075);
  width: 218px;
  min-height: 500px;
}

#sidebar .banner {
  border: 1px solid green;
  width: 160px;
  height: 600px;
  margin-left: 30px;
}

label {
  margin-right: 20px;
}

